<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- LinearLayouts containing hours / mins / secs and increment / decrement buttons -->
    <style name="linearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Timer Labels -->
    <style name="timerLabel">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">@string/defaultTimerText</item>
        <item name="android:textSize">@dimen/timerTextSize</item>
        <item name="android:textColor">@color/foreground</item>
    </style>

    <!-- ImageButtons Icon on Top -->
    <style name="timerButton_up">
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:background">@drawable/ic_arrow_drop_up_black_24dp</item>
    </style>

    <!-- ImageButtons Icon at the Bottom -->
    <style name="timerButton_down">
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:background">@drawable/ic_arrow_drop_down_black_24dp</item>
    </style>

    <!-- Spacer -->
    <style name="spacer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/spacerText</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/timerTextSize</item>
    </style>

    <!-- Switch Right -->
    <style name="switch_right">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:background">@drawable/ic_chevron_right_black_24dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- Switch Left -->
    <style name="switch_left">
        <item name="android:layout_width">@dimen/buttonSize</item>
        <item name="android:layout_height">@dimen/buttonSize</item>
        <item name="android:background">@drawable/ic_chevron_left_black_24dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>